        android:fromAlpha="0"
        android:toAlpha="1"
        android:duration="3000" />
    <scale
        android:fromXScale="0.5"
        android:fromYScale="0.5"
        android:toXScale="1"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="3000" />
</set>

